<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">
    <com.accloud.ac_service_android_wifi_demo.view.CusEditText
            android:id="@+id/login_edit_phone"
            android:layout_marginTop="26dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    <com.accloud.ac_service_android_wifi_demo.view.CusEditText
            android:id="@+id/login_edit_pwd"
            android:layout_marginTop="9dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/login"
            android:layout_marginTop="13dp"
            android:text="@string/login_title"
            style="@style/login_btn_style"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
        <TextView
                android:id="@+id/forgetPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/login_text"/>
        <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/theme"
                android:textSize="14sp"
                android:text="@string/login_register"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:layout_marginTop="32dp">
        <TextView android:id="@+id/login_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="第三方登陆"
                  android:textColor="@color/login_text"
                  android:textSize="14sp"
                  android:layout_centerHorizontal="true"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:background="@color/login_line"
                  android:layout_toLeftOf="@id/login_text"
                  android:layout_marginRight="18dp"
                  android:layout_centerVertical="true"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="1dp"
                  android:background="@color/login_line"
                  android:layout_toRightOf="@id/login_text"
                  android:layout_marginLeft="18dp"
                  android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">
        <TextView android:id="@+id/login_weibo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="新浪微博"
                  android:layout_centerHorizontal="true"
                  android:drawableTop="@drawable/weibo_login"
                  android:textSize="14sp"
                  android:drawablePadding="12dp"
                  android:textColor="@color/login_text"/>
        <TextView android:id="@+id/login_weixin"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="微信登陆"
                  android:layout_centerHorizontal="true"
                  android:drawableTop="@drawable/weixin_login"
                  android:layout_toLeftOf="@id/login_weibo"
                  android:layout_marginRight="32dp"
                  android:drawablePadding="12dp"
                  android:textColor="@color/login_text"/>
        <TextView android:id="@+id/login_qq"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="QQ登陆"
                  android:layout_centerHorizontal="true"
                  android:drawableTop="@drawable/qq_login"
                  android:layout_toRightOf="@id/login_weibo"
                  android:layout_marginLeft="32dp"
                  android:drawablePadding="12dp"
                  android:textColor="@color/login_text"/>
    </RelativeLayout>
</LinearLayout>